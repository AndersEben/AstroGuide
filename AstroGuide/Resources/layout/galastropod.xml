<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:paddingRight="25px"
                    android:layout_gravity="left | center_vertical"
                    android:src="@drawable/backbutton_white"
                android:id="@+id/TBImageLeft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:text="test"
                    android:textSize="85px"
                    android:layout_gravity="center"
                    android:id="@+id/TBTextCenter"/>
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="right | center_vertical"
                    android:paddingRight="25px"
                    android:src="@drawable/homebutton_white"
                    android:id="@+id/TBImageRight"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/GalastName"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="Placeholder"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="55px"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/GalastroContentLL">
                <ImageView
                    android:id="@+id/GalastroBild"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/icon_quartz"
                    android:layout_marginBottom="70px"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="70px"
                    android:id="@+id/GalasImageViewer"/>
                <RelativeLayout
                    android:id="@+id/RLGFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/TVGFood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Food :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/GalastFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25px"
                        android:text="Placeholder"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLGTerrarium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/TVGTerrarium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terrarium :"/>
                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65px"
                        android:id="@+id/GalastTerrarium"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLGBeschreibung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                             android:id="@+id/TVGBeschreibung"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Beschreibung :"/>
                        <TextView
                            android:id="@+id/GalastBeschreibung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20px"
                            android:text="Placeholder"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLGBuff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TVGBuff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buff :"/>
                        <TextView
                            android:id="@+id/GalastBuff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20px"
                            android:text="Placeholder"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>