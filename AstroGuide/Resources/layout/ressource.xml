<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:paddingRight="25px"
                    android:layout_gravity="left | center_vertical"
                    android:src="@drawable/backbutton_white"
                android:id="@+id/TBImageLeft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:text="test"
                    android:textSize="85px"
                    android:layout_gravity="center"
                    android:id="@+id/TBTextCenter"/>
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="right | center_vertical"
                    android:paddingRight="25px"
                    android:src="@drawable/homebutton_white"
                    android:id="@+id/TBImageRight"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/RessourceName"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Placeholder"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="55px"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/RessourceContentLL">
            <ImageView
                android:id="@+id/RessourceBild"
                android:layout_width="250px"
                android:layout_height="250px"
                android:src="@drawable/icon_quartz"
                android:layout_gravity="center"
                android:layout_marginBottom="70px"
                android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:layout_marginTop="50px"
                android:layout_marginBottom="70px"
                android:id="@+id/ResImageViewer"/>
            <RelativeLayout
                android:id="@+id/RLRTyp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRTyp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Typ :"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/RessourceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25px"                    
                    android:text="Placeholder"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRVorkommen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRVorkommen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vorkommen :"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/RLVorkommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65px"/>
                <TextView
                    android:id="@+id/RVorkommen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRRezept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRRezept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rezept :"/>
                </LinearLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RLHerstellung"
                    android:layout_marginTop="65px"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRHerstellungsort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRHerstellungsort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Herstellungsort :"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/RHerstellung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25px"                    
                    android:text="PlaceHolder"/>
                <ImageView
                    android:id="@+id/RHerstellungImage"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="25px"
                    android:layout_alignParentRight="true"
                        android:visibility="gone"
                    android:src="@drawable/icon_quartz"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRForschungswert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRForschungswert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forschungswert :"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/RWert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25px"                    
                    android:text="Placeholder"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRTauschwert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRTauschwert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tauschwert :"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/RTWert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25px"                    
                    android:text="Placeholder"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRTrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRTrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trade :"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/RLTrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65px"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLRVerwendung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="25px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TVRVerwendung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verwendung :"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/RLVerwendung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65px"/>
            </RelativeLayout>
        </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</LinearLayout>
</LinearLayout>