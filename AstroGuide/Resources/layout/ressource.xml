<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dip">
    <TextView
        android:id="@+id/RessourceName"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Placeholder"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="55px"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/RessourceBild"
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@drawable/icon_quartz"
        android:layout_gravity="center"
        android:layout_marginBottom="70px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Typ :"/>
        </LinearLayout>
        <TextView
            android:id="@+id/RessourceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25px"                    
            android:text="Placeholder"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutLVorkommen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/LabelVorkommen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vorkommen :"/>
        </LinearLayout>
        <ListView
            android:id="@+id/RLVorkommen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/RVorkommen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutLHerstellung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:visibility="gone"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rezept :"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RLHerstellung"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutHerstellung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:visibility="gone"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Herstellungsort :"/>
        </LinearLayout>
        <TextView
            android:id="@+id/RHerstellung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25px"                    
            android:text="PlaceHolder"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forschungswert :"/>
        </LinearLayout>
        <TextView
            android:id="@+id/RWert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25px"                    
            android:text="Placeholder"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutTauschwert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tauschwert :"/>
        </LinearLayout>
        <TextView
            android:id="@+id/RTWert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25px"                    
            android:text="Placeholder"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutTrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/LabelTrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trade :"/>
        </LinearLayout>
        <ListView
            android:id="@+id/RLTrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LayoutVerwendung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
        android:layout_marginBottom="25px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/LabelVerwendung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verwendung :"/>
        </LinearLayout>
        <ListView
            android:id="@+id/RLVerwendung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
