<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:paddingRight="25px"
                    android:layout_gravity="left | center_vertical"
                    android:src="@drawable/backbutton"
                android:id="@+id/TBImageLeft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:text="test"
                    android:textSize="85px"
                    android:layout_gravity="center"
                    android:id="@+id/TBTextCenter"/>
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="right | center_vertical"
                    android:paddingRight="25px"
                    android:src="@drawable/homebutton"
                    android:id="@+id/TBImageRight"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dip">
        <TextView
            android:id="@+id/CraftName"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="Placeholder"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="55px"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/CraftContentLL">
                <ImageView
                    android:id="@+id/CraftBild"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/icon_quartz"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70px"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="70px"
                    android:id="@+id/CraftImageViewer"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:layout_marginBottom="25px">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Typ :"/>
            </LinearLayout>
            <TextView
                android:id="@+id/CraftType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25px" 
                android:text="Placeholder"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:layout_marginBottom="25px"
                    android:id="@+id/RLCraftRezept">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rezept :"/>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CLHerstellung"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:layout_marginBottom="25px"
            android:id="@+id/RLCraftHerstellungsort">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Herstellungsort :"/>
            </LinearLayout>
            <TextView
                android:id="@+id/CraftHerstellung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:paddingRight="75px"
                android:text="PlaceHolder"/>
                    <ImageView
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:foregroundGravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25px"
                        android:id="@+id/CraftHerstellungImage"
                        android:src="@drawable/icon_atrox"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:layout_marginBottom="25px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beschreibung :"/>
            <TextView
                            android:paddingTop="20px"
                android:id="@+id/CraftBeschreibung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlaceHolder"/>
        </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:layout_marginBottom="25px"
                    android:id="@+id/RLCraftForschungskosten">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forschungskosten :"/>
            </LinearLayout>
            <TextView
                android:id="@+id/CWert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25px" 
                android:text="Placeholder"/>
        </RelativeLayout>
        <RelativeLayout
                    android:id="@+id/LayoutCrafterHerstellung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12px"
            android:visibility="gone"
            android:layout_marginBottom="25px">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/CrafterHerstellung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verwendung :"/>
            </LinearLayout>
            <ListView
                android:id="@+id/CLObjekte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>