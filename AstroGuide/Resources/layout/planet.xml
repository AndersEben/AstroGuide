<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:paddingRight="25px"
                    android:layout_gravity="left | center_vertical"
                    android:src="@drawable/backbutton"
                android:id="@+id/TBImageLeft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:text="test"
                    android:textSize="85px"
                    android:layout_gravity="center"
                    android:id="@+id/TBTextCenter"/>
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="right | center_vertical"
                    android:paddingRight="25px"
                    android:src="@drawable/homebutton"
                    android:id="@+id/TBImageRight"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dip">
        <TextView
            android:id="@+id/PlanetName"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="Placeholder"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="55px"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/PlanetContentLL">
                <ImageView
                    android:id="@+id/PlanetBild"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginBottom="70px"
                    android:src="@drawable/icon_quartz"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="70px"
                    android:id="@+id/PlanteImageViewer"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Typ :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/PlanetType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Placeholder"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Größe :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/PlanetSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Placeholder"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Schwierigkeitsgrad :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/PlanetDiff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Placeholder"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                <TextView
                    android:padding="8px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20px"
                    android:text="Energiequellen :"/>
                        </LinearLayout>
                <ListView
                    android:id="@+id/PlanetEnergiequellen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                android:paddingTop="50px"
                    android:layout_marginTop="15px"/>
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Portal-Maschine Ressource :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/PlanetPortalRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:layout_marginRight="85px"
                        android:layout_alignParentRight="true"
                        android:text="Placeholder"/>
                    <ImageView
                        android:id="@+id/PlanetPortalResImage"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_quartz"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Galastropode :"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/PlanetGalatrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:layout_marginRight="85px"
                        android:layout_alignParentRight="true"
                        android:text="Placeholder"/>
                    <ImageView
                        android:id="@+id/PlanetGalatropImage"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_marginLeft="25px"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_quartz"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="8px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:text="Pflanzen :"/>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/PlanetPflanzen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="50px"
                        android:paddingBottom="25px"
                        android:layout_marginTop="15px"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
                    android:padding="12px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="8px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:text="Ressourcen :"/>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/PlanetRessourcen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="50px"
                        android:paddingBottom="25px"
                        android:layout_marginTop="15px"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>